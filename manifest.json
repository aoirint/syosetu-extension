{
  "name": "syosetu-extension",
  "manifest_version": 2,
  "version": "0.1.0",
  "description": "syosetu",
  "permissions": [
    "tabs",
    "contextMenus",
    "https://*.syosetu.com/*"
  ],
  "background": {
    "scripts": [
      "src/background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.syosetu.com/**"
      ],
      "all_frames": true,
      "js": [ "src/content.js" ]
    }
  ]
}
